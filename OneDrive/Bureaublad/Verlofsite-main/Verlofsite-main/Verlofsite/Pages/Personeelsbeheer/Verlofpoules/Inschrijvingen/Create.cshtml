@page
@model Verlofsite.Pages.Personeelsbeheer.Inschrijvingen.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Nieuwe inschrijving</h1>

<h4>Schrijf een werknemer in in een verlofpoule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Inschrijving.Verlofpoule" class="control-label"></label>
                <select asp-for="Inschrijving.VerlofpouleID" class="form-control"
                        asp-items="@Model.VerlofpouleNameSL">
                    <option value="">-- Selecteer verlofpoule --</option>
                </select>
                <span asp-validation-for="Inschrijving.VerlofpouleID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Inschrijving.UserName" class="control-label"></label>
                <input asp-for="Inschrijving.UserName" class="form-control" />
                <span asp-validation-for="Inschrijving.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="toevoegen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">terug naar lijst</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
