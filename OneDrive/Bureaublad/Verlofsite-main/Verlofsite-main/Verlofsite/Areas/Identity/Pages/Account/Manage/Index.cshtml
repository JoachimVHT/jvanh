@page
@model IndexModel
@{
    ViewData["Title"] = "Profiel";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Voornaam"></label>
                <input asp-for="Input.Voornaam" class="form-control" disabled />
                <span asp-validation-for="Input.Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Achternaam"></label>
                <input asp-for="Input.Achternaam" class="form-control"  disabled/>
                <span asp-validation-for="Input.Achternaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Functie"></label>
                <input asp-for="Input.Functie" class="form-control" disabled/>
                <span asp-validation-for="Input.Functie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Rol" class="control-label"></label>
                <select asp-for="Input.Rol" class="form-control" disabled>
                    <option>arbeider</option>
                    <option>ploegchef</option>
                    <option>productieverantwoordelijke</option>
                    <option>HR</option>
                </select>
                <span asp-validation-for="Input.Rol" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Input.PhoneNumber">telefoonnummer</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>*@
            <!--<button id="update-profile-button" type="submit" class="btn btn-primary">opslaan</button>-->
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}