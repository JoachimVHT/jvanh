@page
@model Verlofsite.Pages.Personeelsbeheer.Verlofpoules.EditModel

@{
    ViewData["Title"] = "bewerk";
}

<h1>Bewerk</h1>

<h4>Verlofpoule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Verlofpoule.VerlofpouleID" />
            <div class="form-group">
                <label asp-for="Verlofpoule.Naam" class="control-label"></label>
                <input asp-for="Verlofpoule.Naam" class="form-control" />
                <span asp-validation-for="Verlofpoule.Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Terug naar lijst</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
