@page
@model Verlofsite.Pages.ZiekteAanvragen.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Nieuwe ziekte aangifte</h1>

<h4>vul formulier in</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ZiekteAanvraag.WerknemerNaam" class="control-label"></label>
                <input asp-for="ZiekteAanvraag.WerknemerNaam" class="form-control" />
                <span asp-validation-for="ZiekteAanvraag.WerknemerNaam" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ZiekteAanvraag.StartDatum" class="control-label"></label>
                <input asp-for="ZiekteAanvraag.StartDatum" class="form-control" />
                <span asp-validation-for="ZiekteAanvraag.StartDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZiekteAanvraag.EindDatum" class="control-label"></label>
                <input asp-for="ZiekteAanvraag.EindDatum" class="form-control" />
                <span asp-validation-for="ZiekteAanvraag.EindDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="toevoegen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">terug naar lijst</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
